<div id="page-wrapper">
      <div class="main-page">
       <%= link_to "New User" , newuser_users_path ,:class => "button3"%><br><br>
       		<input size="40" type="text" placeholder="Search"/><br><input type="submit" class="button3" name="submit">
      				<br>
       				<br>
       		<div class="tables">
					<h3 class="title1">User List</h3>
					<div class="panel-body widget-shadow">
						<table class="table">
							<thead>
								<tr>
								  <th>User Id</th>
								  <th>Name</th>
								  <th>Email</th>
								</tr>
							</thead>
							
							<tbody>
							<% @user.each do |u| %>
							<%= simple_form_for User.new do |f| %>
								<tr>
								  <td><%= u.id %></td>
								  <td><%= u.f_name %></td>
								  <td><%= u.email %></td>
								  <td><%= f.collection_select :role_id, Role.order(:name),:id,:name, include_blank: false %><button class="button3">Update</button>
								</td>
								</tr>
							</tbody>
							<% end %>
							<% end %>
						</table>
					</div>
					</div>
					</div>
      <div class="clearfix"> </div> 
</div>