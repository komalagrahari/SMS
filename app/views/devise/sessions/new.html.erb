<div id="page-wrapper">
  <div class="main-page login-page ">
    <h3 class="title1">Sign In to see in Action</h3>
    <div class="widget-shadow">
      <div class="login-top">
        <h4>Welcome to User Login </h4>
      </div>
      <div class="login-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.label :email, :class => 'user', :name => 'email' , :placeholder => 'Enter your email' %><br />
          <%= f.email_field :email, :autofocus => true, :autocomplete => 'email' %>
          <%= f.label :password , :name => 'password' , :class => 'lock' , :placeholder => 'password' %><br />
          <%= f.password_field :password, :autocomplete => 'off' %>
          <%= f.submit "Login" , :name => 'Sign In' %>
          <div class="forgot-grid">
            <label> <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                    <%= link_to "Forgot Password" ,  new_user_password_path %>
                    <% end -%></label>
            <div class="clearfix"> </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>